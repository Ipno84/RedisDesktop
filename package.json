{
    "name": "redis-client-manager",
    "version": "0.1.0",
    "private": true,
    "main": "electron/index.js",
    "dependencies": {
        "@testing-library/jest-dom": "^4.2.4",
        "@testing-library/react": "^9.3.2",
        "@testing-library/user-event": "^7.1.2",
        "color": "^3.1.2",
        "electron": "^7.1.8",
        "electron-context-menu": "^0.15.2",
        "electron-is-dev": "^1.1.0",
        "ioredis": "^4.14.1",
        "react": "^16.12.0",
        "react-desktop": "^0.3.9",
        "react-dom": "^16.12.0",
        "react-redux": "^7.1.3",
        "react-scripts": "3.3.0",
        "redux": "^4.0.5",
        "redux-persist": "^6.0.0",
        "redux-saga": "^1.1.3",
        "reselect": "^4.0.0",
        "styled-components": "^4.4.1",
        "styled-normalize": "^8.0.6"
    },
    "scripts": {
        "start": "react-app-rewired start",
        "build": "react-app-rewired build",
        "test": "react-app-rewired test",
        "eject": "react-scripts eject",
        "electron": "electron .",
        "postinstall": "electron-rebuild -f",
        "reb": "node-gyp rebuild --target=7.1.7 --arch=x64 --dist-url=https://electronjs.org/headers",
        "icon": "electron-icon-maker --input=./public/app-icon/redis-icon.webp --output=./public/app-icon",
        "pack": "electron-builder -mw --x64 --dir",
        "dist": "electron-builder -mw --x64"
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "electron-builder": "^21.2.0",
        "electron-icon-maker": "0.0.4",
        "electron-rebuild": "^1.8.8",
        "react-app-rewire-unplug": "^0.9.0",
        "react-app-rewire-webpack-bundle-analyzer": "^1.1.0",
        "react-app-rewired": "^2.1.5",
        "webpack-bundle-analyzer": "^3.6.0",
        "webpack-node-externals": "^1.7.2"
    },
    "build": {
        "appId": "com.logispin.redisdesktopmanager",
        "productName": "Redis Desktop Manager",
        "copyright": "Copyright Â© year Logispin Group",
        "mac": {
            "category": "public.app-category.developer-tools",
            "target": [
                "zip",
                "dmg"
            ],
            "icon": "build/app-icon/icons/mac/icon.icns"
        },
        "win": {
            "target": "nsis",
            "icon": "build/app-icon/icons/win/icon.ico"
        },
        "linux": {
            "target": "AppImage",
            "icon": "build/app-icon/icons/png/32x32.png",
            "category": "Development"
        }
    }
}
